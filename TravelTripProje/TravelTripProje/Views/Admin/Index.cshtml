@using TravelTripProje.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
        <th>YORUMLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">GÜNCELLE</a></td>
            <td><a href="/Admin/BlogDetaylar/@x.ID" class="btn btn-success">DETAYLAR</a></td>
            <td><a href="/Admin/Yorum/@x.ID" class="btn btn-primary">YORUMLAR</a></td>
        </tr>
    }
</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Blog</a>
